{
  "name": "solidity-ts-dev-stack",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "dev": "hardhat watch compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:watch": "hardhat watch test",
    "coverage": "npm run build && hardhat coverage --temp artifacts --network coverage",
    "chain": "hardhat node",
    "deploy:init": "hardhat run scripts/deploy.ts",
    "deploy:upgrade": "hardhat run scripts/upgrade.ts",
    "format": "prettier --ignore-path .gitignore --write './**/*.{ts,sol,json,md,yml}'",
    "lint": "yarn lint:solhint && yarn lint:prettier",
    "lint:solhint": "hardhat check",
    "lint:prettier": "prettier --ignore-path .gitignore --check './**/*.{ts,sol,json,md,yml}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janek26/solidity-ts-dev-stack.git"
  },
  "author": "janek26",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/janek26/solidity-ts-dev-stack/issues"
  },
  "homepage": "https://github.com/janek26/solidity-ts-dev-stack#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts-upgradeable": "^3.3.0",
    "@openzeppelin/hardhat-upgrades": "^1.5.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.24",
    "hardhat": "^2.0.5",
    "hardhat-abi-exporter": "^2.0.8",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.4",
    "hardhat-watcher": "^2.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solc": "^0.8.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,sol,json,md,yml}": "prettier --write",
    "*.sol": "yarn lint"
  }
}
